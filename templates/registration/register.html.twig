{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="form-group offset-2 col-8">
        <h1>S'enregistrer</h1>

        {{ form_start(registrationForm, {'attr':{'class':'form-group'}}) }}
        {{ form_row(registrationForm.LastName, {'attr':{'class':'form-control'}}) }}
        {{ form_row(registrationForm.firstName, {'attr':{'class':'form-control'}}) }}
        {{ form_row(registrationForm.phone, {'attr':{'class':'form-control'}}) }}
        {{ form_row(registrationForm.nbPerson, {'attr':{'class':'form-control'}}) }}
        {{ form_row(registrationForm.houseNumber, {'attr':{'class':'form-control'}}) }}
        {{ form_row(registrationForm.image, {'attr':{'class':'form-control-file'}}) }}
        {{ form_row(registrationForm.email, {'attr':{'class':'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, {'attr':{'class':'form-control'}}, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {'attr':{'class':'form-check'}}) }}

        <div class="text-center">
            <button type="submit" class="btn btn-info text-center mt-2">Register</button>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
